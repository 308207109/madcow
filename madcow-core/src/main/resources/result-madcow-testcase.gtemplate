<!doctype html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"><!--<![endif]-->
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>$testName</title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="layout" content="main"/>

        <link href="../.assets/bootstrap/css/bootstrap.css" rel="stylesheet"/>
        <style type="text/css">
            @media screen,print {
                body {
                    padding-top: 60px;
                }

                .table td {
                    vertical-align: middle;
                }
            }
        </style>
        <link href="../.assets/bootstrap/css/bootstrap-responsive.css" rel="stylesheet"/>

    </head>
    <body>
        <div class="container">

            <div class="row">
                <div class="page-header">
                    <h1>Results for $testName</h1>
                </div>
                <a class="btn btn-small btn-primary" href="javascript:history.go(-1)">Back to Results</a>
                <br/><br/>
            </div>

            <div class="row">
                <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Grass</th>
                                <th>Status</th>
                                <th>Result</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% steps.each { step -> %>
                            <tr>
                                <td>${step.blade.line}</td>
                                <% if (step.result.passed()) { %>
                                <td><a class="btn btn-success"><i class="icon-ok icon-white"></i></a></td>
                                <% } else { %>
                                <td><a class="btn btn-danger"><i class="icon-remove icon-white"></i></a></td>
                                <% } %>
                                <td>${step.result}</td>
                            </tr>
                            <% } %>
                        </tbody>
                </table>
            </div>
        </div>
        <script src="../.assets/jquery-1.7.2.min.js" type="text/javascript" ></script>
    </body>
</html>